	for(;;){
		char line[1024];
		char *buf[64];
		char str[64][64];
		int i, j, n;
		pid_t pid;
		i=0,j=0,n=0;
		printf("sish$ ");
		fgets(line, 1024, stdin);
		fflush(stdin);
		line[strlen(line)-1]='\0';
		while (line[i] != '\0'){
			if(line[i] == ' ') {
				strncpy(str[n],line+j,i-j);
				str[n][i-j]='\0';
				buf[n]=str[n];
				n++;
				i++;
				j=i;
			} else
				i++;
		}
		strncpy(str[n],line+j,i-j);
		str[n][i-j]='\0';
		buf[n]=str[n];
		printf("%s\n",buf[0]);
		buf[n+1]=NULL;
		if ((pid=fork())==-1){exit(EXIT_FAILURE);}
		else if (pid == 0){
		execvp(buf[0],buf);
		fprint
		exit(EXIT_FAILURE);
		}
		else{
			int status;
			waitpid(pid,&status,0);
		}
	}

